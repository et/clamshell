module Clamshell
  class Dsl

    def self.build(file)
      builder = instance_eval(IO.read(file))
    end
  end

  class Dependencies

    attr_reader :name

    def self.configure(&block)
      d = new
      d.instance_eval(&block)
      return d
    end

    def initialize
      @dependencies = []
      @name         = nil
    end

    def project(name)
      @name = name
    end

    def git(uri, opts = {})
      @dependencies << Git.new(uri, opts)
    end

    def environment(&block)
      e = Environment.new
      e.instance_eval(&block)
      return e
    end
  end

  class Environment
    def initialize
      @vars = []
    end

    def env_var(name, val)
      @vars[name] = val
    end

    def env_var(name, opts)
    end
  end
end
